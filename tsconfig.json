{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "dom",
      "es6",
      "es2017"
    ],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
